
<div class="container">
  <div class="page-header text-center">
    <h1>Projects</h1>
    <%= link_to 'Create Project', new_project_path, class: 'btn btn-success'%>
    <h4><span class="label label-primary"></span></h4>
  </div>
</div>
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td class="text-center">
          <%= link_to "Show", project_path(project), class: 'btn btn-success' %>
          <%= link_to "Edit", edit_project_path(project), class: 'btn btn-success' %>
          <%= link_to 'Delete', project_path(project), method: :delete, class: 'btn btn-danger'  %>

        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  
</div>
